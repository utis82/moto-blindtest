{
  "compilerOptions": {
    "target": "ES2020",
    "module": "node16",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node16",
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      ".prisma/client/*": ["./node_modules/.prisma/client/*"]
    }
  },
  "include": ["src", "../services", "../db/seed.ts"],
  "exclude": ["node_modules", "dist"]
}
