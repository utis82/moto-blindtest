{
  "name": "backend",
  "version": "1.0.0",
  "main": "dist/backend/src/index.js",
  "scripts": {
    "dev": "ts-node-dev --respawn --transpile-only src/index.ts",
    "build": "tsc -p tsconfig.json",
    "start": "node dist/backend/src/index.js",
    "prisma:generate": "prisma generate --schema ../db/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema ../db/schema.prisma",
    "prisma:deploy": "prisma migrate deploy --schema ../db/schema.prisma",
    "prisma:seed": "prisma db seed --schema ../db/schema.prisma"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Moto blind test backend",
  "prisma": {
    "seed": "env NODE_PATH=./node_modules ts-node --project tsconfig.json ../db/seed.ts"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^5.2.1"
  },
  "devDependencies": {
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.6",
    "@types/node": "^24.10.1",
    "prisma": "^5.22.0",
    "ts-node": "^10.9.2",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.9.3"
  }
}
